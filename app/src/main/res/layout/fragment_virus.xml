<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical"
    tools:context=".VirusTab">

    <TextView
        android:id="@+id/r0_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center_horizontal"
        android:text="Basic Reproductive Rate (R0)"
        android:textColor="#003e74"
        android:textSize="32dp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/r0_seek"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="200"
        android:min="0"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:progressTint = "#009cbc"
        android:paddingEnd="0dp"
        android:progress="53"
        android:scaleX="2"
        android:scaleY="2" />


    <TextView
        android:id="@+id/r0_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center"
        android:text="1.80"
        android:textSize="48dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/v_spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text=" "
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tinf_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center_horizontal"
        android:text="Infectious Period (days)"
        android:textColor="#003e74"
        android:textSize="32dp"
        android:textStyle="bold" />


    <SeekBar
        android:id="@+id/tinf_seek"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="200"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="100"
        android:progressTint = "#009cbc"
        android:scaleX="2"
        android:scaleY="2" />

    <TextView
        android:id="@+id/tinf_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center"
        android:text="3.00"
        android:textSize="48dp"
        android:textStyle="bold" />

</LinearLayout>
